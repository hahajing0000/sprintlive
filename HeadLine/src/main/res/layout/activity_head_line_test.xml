<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HeadLineTestActivity">

    <Button
        android:id="@+id/btn_headline_getnewsindex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取新闻资讯索引"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/btn_headline_getdetailinfo"
        android:text="获取详情数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_headline_getnewsindex"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>